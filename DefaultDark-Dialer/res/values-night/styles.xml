<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Dialer.ThemeBase.ActionBar" parent="*com.android.dialer:style/Dialer.Dark.ThemeBase.ActionBar" />
    <style name="Dialer.ThemeBase.NoActionBar" parent="*com.android.dialer:style/Dialer.Dark.ThemeBase.NoActionBar" />
    <style name="Dialer.ThemeBase" parent="*com.android.dialer:style/Dialer.Dark.ThemeBase" />

    <style name="SettingsStyle" parent="*com.android.dialer:style/Dialer.Dark.ThemeBase.ActionBar">
        <!-- Setting text. -->
        <!--
        <item name="android:textColorPrimary">@color/settings_text_color_primary</item>
        -->
        <!-- Setting description. -->
        <!--
        <item name="android:textColorSecondary">@color/settings_text_color_secondary</item>
        -->
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:colorAccent">?android:attr/colorPrimary</item>
    </style>

  <style name="Dialer.Dark.ThemeBase" parent="*com.android.dialer:style/Dialer.Dark">
    <!-- These values should be used to color all backgrounds. -->
    <!--
    <item name="android:colorBackground">@color/google_grey_900</item>
    <item name="android:colorBackgroundFloating">@color/google_grey_800</item>
    -->

    <!-- These values should be used to set text color. -->
    <!-- swap text colors. -->
    <!--
    <item name="android:textColorPrimary">@color/dialer_dark_primary_text_color</item>
    <item name="android:textColorSecondary">@color/dialer_dark_secondary_text_color</item>
    <item name="android:textColorPrimaryInverse">@color/dialer_primary_text_color</item>
    <item name="android:textColorSecondaryInverse">@color/dialer_secondary_text_color</item>
    <item name="android:textColorHint">@color/google_grey_600</item>
    -->

    <!-- These will be automatically used to color most Appcompat/Material widgets. -->
    <item name="android:colorPrimary">@*com.android.dialer:color/dialer_dark_theme_color</item>
    <item name="*com.android.dialer:colorPrimary">@*com.android.dialer:color/dialer_dark_theme_color</item>
    <item name="android:colorPrimaryDark">@*com.android.dialer:color/dialer_dark_theme_color_dark</item>
    <item name="*com.android.dialer:colorPrimaryDark">@*com.android.dialer:color/dialer_dark_theme_color_dark</item>
    <item name="android:colorAccent">@*com.android.dialer:color/dialer_dark_secondary_color</item>
    <item name="*com.android.dialer:colorAccent">@*com.android.dialer:color/dialer_dark_secondary_color</item>

    <!-- Used to automatically style check/selected checkbox, switches and radio buttons -->
    <item name="*com.android.dialer:colorControlActivated">?android:attr/colorPrimary</item>

    <!-- Dialer specific attributes. -->
    <item name="*com.android.dialer:colorIcon">?android:attr/textColorSecondary</item>
    <item name="*com.android.dialer:colorIconSecondary">?android:attr/textColorSecondary</item>
    <item name="*com.android.dialer:colorTextOnUnthemedDarkBackground">@android:color/white</item>
    <item name="*com.android.dialer:colorIconOnUnthemedDarkBackground">@android:color/white</item>
    <item name="*com.android.dialer:colorPrimary20pct">@*com.android.dialer:color/dialer_dark_theme_color_20pct</item>
  </style>

  <style name="MainActivityTheme" parent="*com.android.dialer:style/MainActivityTheme.Dark"/>
  <style name="MainActivityThemeBase" parent="*com.android.dialer:style/MainActivityThemeBase.Dark"/>
  <style name="Theme.InCallScreen.Light" parent="*com.android.dialer:style/Theme.InCallScreen"/>

  <style name="MainActivityTheme.Dark" parent="*com.android.dialer:style/MainActivityThemeBase.Dark">
    <!-- Used to change the navigation bar color -->
    <!--
    <item name="android:windowLightNavigationBar">true</item>
    <item name="android:navigationBarColor">?android:attr/colorBackgroundFloating</item>
    <item name="android:navigationBarDividerColor">#E0E0E0</item>
    -->
  </style>

  <style name="AlertDialogTheme" parent="*com.android.dialer:style/Theme.AppCompat.Dialog.Alert">
    <!-- TODO(a bug): figure out why ?android:attr/colorPrimary doesn't work here -->
    <item name="android:colorAccent">@*com.android.dialer:color/dialer_dark_theme_color</item>
    <item name="*com.android.dialer:colorAccent">@*com.android.dialer:color/dialer_dark_theme_color</item>
    <item name="android:background">@*android:color/background_floating_device_default_dark</item>
  </style>
</resources>
