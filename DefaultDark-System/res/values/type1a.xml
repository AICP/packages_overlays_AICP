<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- BG: open with... -->
    <color name="resolver_list_bg">@*android:color/background_floating_material_dark</color>
    <!-- BG: share with -->
    <color name="chooser_service_row_background_color">#ff303030</color>

    <style name="Theme.DeviceDefault.Resolver" parent="@android:style/Theme.Material">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorControlActivated">#33ffffff</item><!-- ?attr/colorControlHighlight -> ripple_material_dark -->
        <item name="android:listPreferredItemPaddingStart">16dp</item><!-- ?attr/dialogPreferredPadding -> list_item_padding_horizontal_material -> action_bar_content_inset_material -->
        <item name="android:listPreferredItemPaddingEnd">16dp</item><!-- ?attr/dialogPreferredPadding -> list_item_padding_horizontal_material -> action_bar_content_inset_material -->
    </style>

    <style name="Theme.DeviceDefault.QuickSettings" parent="@*android:style/Theme.Material">
        <item name="android:colorPrimary">#ff212121</item>
        <item name="android:colorPrimaryDark">#ff000000</item>
        <item name="android:colorSecondary">#ff424242</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
    </style>

    <style name="Theme.DeviceDefault.QuickSettings.Dialog" parent="@*android:style/Theme.Material.Dialog">
        <item name="android:colorPrimary">#ff212121</item>
        <item name="android:colorPrimaryDark">#ff000000</item>
        <item name="android:colorSecondary">#ff424242</item>
        <item name="android:colorAccent">@*android:color/accent_material_dark</item>
    </style>
</resources>
