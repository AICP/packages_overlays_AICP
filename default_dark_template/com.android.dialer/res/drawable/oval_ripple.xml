<ripple xmlns:android="http://schemas.android.com/apk/res/android"
  android:color="?android:attr/colorControlHighlight">
  <item>
    <shape android:shape="oval">
      <!-- Displayed on top of background_floating_device_default_dark,
        so we want to ensure that we can see this on both #424242 and #000000 (for AICP theming).
        Grey avatars seem to have #757575 as background, so that should look fine. -->
      <solid android:color="#757575"/>
    </shape>
  </item>
</ripple>
